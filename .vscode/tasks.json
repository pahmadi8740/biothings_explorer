{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "npm run compile",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "start redis",
      "type": "shell",
      "dependsOn": ["stop redis"],
      "command": "docker run --name test-redis -p 6379:6379 -d --hostname=redis:latest redis redis-server",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "start redis cluster",
      "type": "shell",
      "dependsOn": ["stop redis"],
      "command": "docker run -e 'IP=0.0.0.0' -p 6379-6384:6379-6384 -e INITIAL_PORT=6379 -d --name test-redis-cluster grokzen/redis-cluster:6.2.8",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "stop redis",
      "type": "shell",
      "command": "docker rm test-redis --force || true; docker rm test-redis-cluster --force || true",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build and start redis",
      "type": "shell",
      "dependsOn": ["build", "start redis"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build and start redis cluster",
      "type": "shell",
      "dependsOn": ["build", "start redis cluster"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
